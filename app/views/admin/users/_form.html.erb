<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for [:admin, user] do |form| %>
  <div class="form-group">
    <%= form.label :email, t('users.email') %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, t('users.password') %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, t('users.password_confirmation') %>
    <%= form.password_field :password, class: "form-control", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :nickname, t('users.nickname') %>
    <%= form.text_field :nickname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :admin %>
    <%= form.label :admin, t('admin.administrator') %>
    </div>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
